<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APIpostagens.Views.PostagensView"
             Title="PostagensView">
    <VerticalStackLayout>        
        <Label
                x:Name="IdLbl"
                Text="{Binding Id}"
                Style="{StaticResource SubHeadline}"/>
        <Label
                x:Name="TitleLbl"
                Text="{Binding Title}"
                Style="{StaticResource SubHeadline}"/>
        <Label
                x:Name="BodyLbl"
                Text="{Binding Body}"
                Style="{StaticResource SubHeadline}"/>
        <Button
                x:Name="BuscarBtn"
                Text="Carregar"
                Command="{Binding CarregaPostagensCommand}" 
                HorizontalOptions="Fill" />

    </VerticalStackLayout>
</ContentPage>