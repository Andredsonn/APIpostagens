<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APIpostagens.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                x:Name="UserIdLbl"
                Text="User do Usuário"
                Style="{StaticResource Headline}"/>
            <Label
                x:Name="IdLbl"
                Text="ID do Usuário"
                Style="{StaticResource SubHeadline}"/>
            <Label
                x:Name="TitleLbl"
                Text="Title do Usuário"
                Style="{StaticResource SubHeadline}"/>
            <Label
                x:Name="BodyLbl"
                Text="Body do Usuário"
                Style="{StaticResource SubHeadline}"/>
            <Button
                x:Name="BuscarBtn"
                Text="Buscar"
                Clicked="BuscarBtn_Clicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
